@using Backlogger.ViewModels
@model RegisterViewModel

@{
  Layout = "_Layout";
}

<div class="login-container">
  <div class="card login-card p-3">
    <h1>Register</h1>
    @using (Html.BeginForm("Edit", "Account", FormMethod.Post))
    {
      <div class="form-group mb-3">
        <div class="mb-2">
          @Html.LabelFor(user => user.UserName, "User Name")
          @Html.TextBoxFor(user => user.UserName, new {@class="form-control", required = "required"})
        </div>
        <div class="mb-2">
          @Html.LabelFor(user => user.Email)
          @Html.TextBoxFor(user => user.Email, new {@class="form-control", required = "required"})
        </div>
        <div class="mb-2">
          @Html.LabelFor(user => user.Password)
          @Html.PasswordFor(user => user.Password, new {@class="form-control", required = "required"})
        </div>
        <div class="mb-2">
          @Html.LabelFor(user => user.ConfirmPassword)
          @Html.PasswordFor(user => user.ConfirmPassword, new {@class="form-control", required = "required"})
        </div>
      </div>
      <input type="submit" value="Register" class="btn btn-success">
    }
  </div>
</div>
@using System.Security.Claims

<nav class="navbar navbar-expand-lg">
  <div class="navbar-brand" href="#">Backlogger</div>
    <form class="form-inline mx-auto" action="/items/" method="post">
      <div class="input-group">
        <div class="input-group-prepend">
          <select class="form-control search-select" name="searchOption" id="searchOption">
            <option value="games">Search Games</i></option>
            <option value="movies">Search Movies</i></option>
            <option value="tv">Search TV</option>
          </select>
        </div>
        <input class="form-control" name="searchString" id="searchString" type="search" aria-label="Search">
        <div class="input-group-append">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="fas fa-search"></i></button>
        </div>
      </div>
    </form>
    @if (User.Identity.IsAuthenticated)
    {
      <div class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fad fa-user-circle mr-1"></i> @User.Identity.Name
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="/account/edit/@this.User.FindFirst(ClaimTypes.NameIdentifier)?.Value"><i class="fad fa-file-user mr-2"></i> Edit Account</a>
          @using (Html.BeginForm("LogOff", "Account"))
          {
            <a class="dropdown-item" href="#" onclick="this.parentNode.submit()"><i class="fad fa-sign-out-alt mr-2"></i> Log Out</a>
          }
        </div>
      </div>
    }
    else
    {
      <a class="mr-4" href="/account/register"><i class="fad fa-user-plus mr-1"></i> Create Account</a>
      <a href="/account/login"><i class="fad fa-sign-in-alt mr-1"></i> Login</a>
    }
    
</nav>
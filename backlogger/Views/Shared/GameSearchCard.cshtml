@using System;
@using System.Globalization;
@using Backlogger.ApiModels
@model RawgSearchResult

@{
  string BackgroundStyle = "";
  string TransParentBg = "";
  DateTime ParsedDate = new DateTime();
  string ReleaseDate = "";
  if (!String.IsNullOrEmpty(Model.Released))
  {
    ParsedDate = DateTime.Parse(Model.Released);
    ReleaseDate = "<h6 class='card-subtitle mb-2 text-muted'>Released: " + @CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(ParsedDate.Month) + " " + @ParsedDate.Day + ", " + @ParsedDate.Year + "</h6>";
  }
  }
@if (Model.BackgroundImage != null)
{
  BackgroundStyle = "background:url(" + @Model.BackgroundImage + "),#303030;background-size:100% auto; background-position:center";
  TransParentBg = "trans-black-bg";
}
<div class="card mb-3 movie-search-card" style="@BackgroundStyle">
  <div class="card-body">
    <div class="movie-search-container">
      <div class="game-search-column-left mr-3">
        @if (Model.ShortScreenshots.Count > 1)
        {
          <img class="search-poster" src="@Model.ShortScreenshots[1].Image">
        }
        else
        {
          <img class="no-game-poster" src="/img/gamepad-alt-duotone.svg">
        }
      </div>
      <div class="movie-search-column-center p-2 @TransParentBg">
        <h5 class="card-title">@Model.Name</h5>
        @Html.Raw(ReleaseDate)
      </div>
      <div class="movie-search-column-right ml-3">
        <button class="btn btn-warning mb-3 movie-card-button">Game Details</button>
        <button class="btn btn-success movie-card-button">Add to Backlog</button>
      </div>
    </div>
  </div>
</div>
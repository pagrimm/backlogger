@using Backlogger.ApiModels
@model TmdbTvSearchResult

@{string BackgroundStyle = "";}
@{string TransParentBg = "";}
@if (Model.BackdropPath != null)
{
  BackgroundStyle = "background:url(https://image.tmdb.org/t/p/original/" + @Model.BackdropPath + "),#303030;background-size:100% auto; background-position:center";
  TransParentBg = "trans-black-bg";
}

<div class="card mb-3 movie-search-card" style="@BackgroundStyle">
  <div class="card-body">
    <div class="movie-search-container">
      <div class="movie-search-column-left mr-3">
        @if (Model.PosterPath != null)
        {
          <img class="search-poster" src="https://image.tmdb.org/t/p/original/@Model.PosterPath">
        }
        else
        {
          <img class="no-tv-poster" src="/img/tv-retro-duotone.svg">
        }
      </div>
      <div class="movie-search-column-center p-2 @TransParentBg">
        <h5 class="card-title">@Model.Name</h5>
        <h6 class="card-subtitle mb-2 text-muted">Air Date: @Model.FirstAirDate</h6>
        <p class="card-text">@Model.Overview</p>
      </div>
      <div class="movie-search-column-right ml-3">
        @using (Html.BeginForm("Details", "Items", new {id = Model.Id}, FormMethod.Get))
        {
          <input type="hidden" id="type" name="type" value="tv">
          <button class="btn btn-warning mb-3 movie-card-button" type="submit"><i class="fal fa-info-circle"></i></button>
        }
        @using (Html.BeginForm("Create", "Items", new {id = Model.Id}, FormMethod.Post))
        {
          <input type="hidden" id="type" name="type" value="tv">
          <button class="btn btn-success movie-card-button" type="submit"><i class="fas fa-plus"></i></button>
        }
      </div>
    </div>
  </div>
</div>